<%- include("../layouts/navbar") -%>
    <div class="order-page">
        <% if(many==true){%>
            <% for (let i=0; i < algorithm.length; i++) {%>
                <div class="bill-bg">
                    <div class="first-info">
                        <p>اسم الزبون : <%= data.name%>
                        </p>
                        <p>العنوان : الموصل</p>
                        <p>رقم الهاتف : <%= data.phone%>
