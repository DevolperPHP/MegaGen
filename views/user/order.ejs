                                <div class="seconst-info">
                                    <p>التاريخ : <%= data.Date%>
                                    </p>
                                    <p>رقم الفاتورة : <%= data.bill_id%>
                                    </p>
                                </div>

                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>اسم المادة</th>
                                            <th>سعر المادة</th>
                                            <th>الكمية</th>
                                            <th>السعر النهائي</th>
                                        </tr>
                                    </thead>

                                    <tbody>

                                        <% for(let j=0; j < data.order.length; j++){%>
                                            <tr>
                                                <td>
                                                    <%= j+1%>
                                                </td>
                                                <td>
                                                    <%= data.order[j].name%>
                                                </td>
                                                <td>$<%= data.order[j].price%>
                                                </td>
                                                <td>
                                                    <%= data.order[j].qty%>
                                                </td>
                                                <td>$<%= data.order[j].qty * data.order[j].price %>
